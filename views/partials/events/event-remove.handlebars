







 <!-- ALL EVENTS -->

    {{#each this.Events}}
                    {{#if this.removed}}
    <div class="row" id="eventDiv">
        <div class="col-lg-4" id="eventList">
            <div class="att-event">
                
               <div style="font-size: 15px;  float:left;">
                 
                 
              
                     <strong>EVENT NAME: </strong> {{this.dataValues.event_name}}<br>
                        <strong>EVENT DESCRIPTION: </strong> {{this.dataValues.event_desc}}<br>
                            <strong>EVENT LOCATION: </strong> {{this.dataValues.event_location}}<br>
                            <strong>EVENT DATE: </strong> {{this.dataValues.event_date}}


                </div>
                 <div style="padding-top: 5px;  float:right;">         
                           
                           
 <form action="events/delete/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-info btn-xs2" id="removedBtn">REMOVE EVENT</button>
                            </form>
                  </div>      
             </div>
             
        </div>
         
    </div>
  
                     {{/if}}
                {{/each}}