{{> events/nav}}
<!-- START HTML -->
<main class="container">

<!-- HEADER -->


{{> events/event-header}}

<!-- ALL EVENTS -->

   {{#each this.Events}}
    {{#unless this.removed}} 
    <div class="row" id="eventDiv">
        <div class="col-lg-4" id="eventList">
            <div style="border-radius: 6px; border-bottom: 5px solid #b4bcc4; border-right: 3px solid #b4bcc4; height: 100px; width:100%; margin-top:5px; text-align: left; margin-right: 10px; font-size: 19px; font-weight: 400; background-color: #eff3f7; padding:5px 8px;">
                
               <div style="font-size: 15px; width: 80%; float:left;">
                   <!--   Look at the object being passed
                  -->
                            <strong>EVENT NAME: </strong> {{this.dataValues.event_name}}<br>
                            <strong>EVENT DESCRIPTION: </strong> {{this.dataValues.event_desc}}<br>
                            <strong>EVENT LOCATION: </strong> {{this.dataValues.event_location}}<br>
                            <strong>EVENT DATE: </strong> {{this.dataValues.event_date}}
                </div>
                 <div style="padding-top: 5px; width: 20%; float:right;">         
                           
                           
                            <form action="events/update/removed/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="removed" value="1" >
                                <button type="submit" class="btn btn-info btn-xs" id="removedBtn">ATTEND EVENT</span></button>
                            </form>
                  </div>      
             </div>
             
        </div>
         
    </div>
     {{/unless}} 
 {{/each}}

<!-- EVENT FORM -->
        <div class="col-lg-4">
            <div class="row center-block">
                <form class="form-horizontal" action="events/create" method="POST">
                    <fieldset>
                        <strong>POST YOUR EVENT:</h2>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input name="in_event" type="text" placeholder="Name of event" class="form-control">
                                <input name="in_desc" type="textarea" placeholder="Description" class="form-control">
                                <input name="in_location" type="text" placeholder="Location" class="form-control">
                                <input name="in_date" type="date" placeholder="Date" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary btn-sm">POST EVENT</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>



{{> events/event-remove}}


    </div>
</main>
